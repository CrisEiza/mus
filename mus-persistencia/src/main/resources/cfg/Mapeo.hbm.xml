<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<!--  <hibernate-mapping package="es.insa.proyecto.dominio">-->
<hibernate-mapping package="es.insa.proyecto.dominio.cartas">
	<class table="TABLA_CARTAS"
			name="Carta">
		<id name="id" column="ID">
			<generator class="native"></generator>
		</id>	
		<discriminator column="TIPO" type="string" length="2"/>		  
		<property name="palo" column="PALO" not-null="false">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">es.insa.proyecto.dominio.cartas.Palo</param> 
			</type>
		</property>
		<property name="numero" column="NUMERO" not-null="false"/>		
		<property name="valor" column="VALOR" not-null="false"/>
		<subclass name="Gocho" discriminator-value="GO"/>
		<subclass name="Pito" discriminator-value="PI"/>
	</class>
	  
	<class table="TABLA_MAZOS"
			name="Mazo">
		<id name="id" column="ID">
			<generator class="native"/>
		</id>
		<property name="nombre" column="NOMBRE"
				  length="100" not-null="false"/>
		<array name="listaDeCartasDelMazo" cascade="save-update">
			  <key column="FK_MAZO"/>
			  <index column="i" type="integer" length="3"/>
			  <one-to-many class="Carta"/>
		</array>
	</class>
	
</hibernate-mapping>